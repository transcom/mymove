FROM milmove/circleci-docker:milmove-cypress-990c528cc6bfd9e9693fa28aae500d0f577075f6

COPY . ./cypress
COPY cypress.json ./cypress.json
COPY mocha-reporter-config.json ./mocha-reporter-config.json

