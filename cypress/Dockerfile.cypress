FROM milmove/circleci-docker:milmove-cypress-30242a3c2300c60a7d1a61d09769cdb746c0f4b9

COPY . ./cypress
COPY cypress.json ./cypress.json
COPY mocha-reporter-config.json ./mocha-reporter-config.json

