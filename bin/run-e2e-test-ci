#!/bin/bash

set -eu -o pipefail

# Runs both the webserver and Cypress in parallel
# We set LOGIN_GOV_CALLBACK_PORT here because it's more convenient if run locally
ENV=test LOGIN_GOV_CALLBACK_PORT=4000 bin/webserver --no_tls_port 4000 & p1=$!
# shellcheck disable=SC2064
trap "kill $p1" SIGINT

npx cypress run & p2=$!

wait $p2
test_exit=$?
echo "Test exited with code $test_exit"

# Kill background server
pkill $p1 || true

exit $test_exit
