#! /usr/bin/env bash

set -eu -o pipefail

#
# Get Subject of the certificate from CAC
#

OS_VERSION=$(/usr/bin/sw_vers -productVersion)
MAC_OS="10.15"

if [[ $OS_VERSION < $MAC_OS ]]; then
  MODULE=/usr/local/lib/pkcs11/cackey.dylib
else
  MODULE=/usr/local/lib/pkcs11/opensc-pkcs11.so
fi

readonly MODULE
readonly PKCS11=/usr/local/bin/pkcs11-tool

# Check the CAC Pre-Requirements
cac-prereqs

# Certificate Subject
"${PKCS11}" --module "${MODULE}" -r --id 01 --type cert 2>/dev/null | openssl x509 -inform der -noout -subject -nameopt RFC2253 | perl -ne 's/^subject= //; print'
