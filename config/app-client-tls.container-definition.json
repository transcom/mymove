{
  "name": "app-client-tls-{{ .environment }}",
  "image": "{{ .image }}",
  "essential": true,
  "entryPoint": [
    "/bin/milmove",
    "serve",
    "--db-env",
    "container",
    "--logging-env",
    "production",
    "--debug-logging",
    "--log-task-metadata",
    "--mutual-tls-enabled",
    "--tls-enabled"
  ],
  "command": [],
  "portMappings": [
    {
      "containerPort": 9443,
      "hostPort": 9443,
      "protocol": "tcp"
    }
  ],
  "command": [],
  "secrets": {{ .secrets }},
  "environment": [
    {
      "name": "DB_IAM",
      "value": "{{ .DB_IAM }}"
    },
    {
      "name": "ENVIRONMENT",
      "value": "{{ .environment }}"
    },
    {
      "name": "DB_HOST",
      "value": "{{ .db_host }}"
    },
    {
      "name": "DB_PORT",
      "value": "5432"
    },
    {
      "name": "DB_USER",
      "value": "{{ .DB_USER }}"
    },
    {
      "name": "DB_NAME",
      "value": "app"
    },
    {
      "name": "DB_SSL_MODE",
      "value": "{{ .DB_SSL_MODE }}"
    },
    {
      "name": "DB_SSL_ROOT_CERT",
      "value": "{{ .DB_SSL_ROOT_CERT }}"
    },
    {
      "name": "DEVLOCAL_AUTH",
      "value": "{{ .DEVLOCAL_AUTH }}"
    },
    {
      "name": "DPS_REDIRECT_URL",
      "value": "{{ .DPS_REDIRECT_URL }}"
    },
    {
      "name": "DPS_COOKIE_NAME",
      "value": "{{ .DPS_COOKIE_NAME }}"
    },
    {
      "name": "DPS_COOKIE_DOMAIN",
      "value": ".sddc.army.mil"
    },
    {
      "name": "HTTP_DPS_SERVER_NAME",
      "value": "dps.{{ .domain }}"
    },
    {
      "name": "HTTP_ORDERS_SERVER_NAME",
      "value": "orders.{{ .domain }}"
    },
    {
      "name": "AWS_S3_BUCKET_NAME",
      "value": "transcom-ppp-app-{{ .environment }}-us-west-2"
    },
    {
      "name": "AWS_S3_REGION",
      "value": "{{ .AWS_S3_REGION }}"
    },
    {
      "name": "AWS_S3_KEY_NAMESPACE",
      "value": "app"
    },
    {
      "name": "STORAGE_BACKEND",
      "value": "{{ .STORAGE_BACKEND }}"
    },
    {
      "name": "EMAIL_BACKEND",
      "value": "ses"
    },
    {
      "name": "HERE_MAPS_GEOCODE_ENDPOINT",
      "value": "https://geocoder.cit.api.here.com/6.2/geocode.json"
    },
    {
      "name": "HERE_MAPS_ROUTING_ENDPOINT",
      "value": "https://route.cit.api.here.com/routing/7.2/calculateroute.json"
    },
    {
      "name": "LOGIN_GOV_HOSTNAME",
      "value": "{{ .LOGIN_GOV_HOSTNAME }}"
    },
    {
      "name": "DOD_CA_PACKAGE",
      "value": "/config/tls/Certificates_PKCS7_v5.4_DoD.der.p7b"
    },
    {
      "name": "IWS_RBS_HOST",
      "value": "{{ .IWS_RBS_HOST }}"
    },
    {
      "name": "SERVE_SWAGGER_UI",
      "value": "{{ .SERVE_SWAGGER_UI }}"
    },
    {
      "name": "SERVE_DPS",
      "value": "{{ .SERVE_DPS }}"
    },
    {
      "name": "SERVE_ORDERS",
      "value": "{{ .SERVE_ORDERS }}"
    },
    {
      "name": "AWS_CF_DOMAIN",
      "value": "assets.{{ .domain }}"
    }
  ],
  "logConfiguration": {
    "logDriver": "awslogs",
    "options": {
      "awslogs-group": "ecs-tasks-app-client-tls-{{ .environment }}",
      "awslogs-region": "us-west-2",
      "awslogs-stream-prefix": "app"
    }
  },
  "mountPoints": [],
  "volumesFrom": [],
  "readonlyRootFilesystem": true
}
